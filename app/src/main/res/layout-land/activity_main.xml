<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="73dp">

    <Button
            android:text="NEG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNeg"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button4"
            app:layout_constraintEnd_toEndOf="@+id/operation" app:layout_constraintStart_toStartOf="@+id/operation"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/result"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operation"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:text="operation" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/button7"
            app:layout_constraintBaseline_toBaselineOf="@+id/button7" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/newNumber"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/newNumber"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDecimal"
            app:layout_constraintEnd_toStartOf="@+id/buttonDecimal" android:layout_marginEnd="8dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3" app:layout_constraintEnd_toEndOf="@+id/button5"
    />
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:minWidth="48dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:layout_constraintStart_toStartOf="@+id/button6"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5" app:layout_constraintEnd_toStartOf="@+id/button5"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6" app:layout_constraintEnd_toEndOf="@+id/button8"
    />
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:minWidth="48dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button9"
            app:layout_constraintStart_toStartOf="@+id/button9"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8" app:layout_constraintEnd_toStartOf="@+id/button8"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9" app:layout_constraintEnd_toStartOf="@+id/button9"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="4dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/result"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiply"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSubtract"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAdd"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
            app:layout_constraintStart_toEndOf="@+id/buttonEquals" android:layout_marginStart="8dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDecimal"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
            app:layout_constraintEnd_toEndOf="@+id/button2"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEquals"
            android:minWidth="48dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintStart_toStartOf="@+id/button3"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
</android.support.constraint.ConstraintLayout>